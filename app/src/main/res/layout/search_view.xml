<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/searchcardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="130dp"
        android:layout_marginTop="@dimen/margin_20"

        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/white"
        android:padding="4dp"
        app:cardCornerRadius="@dimen/margin_20">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/searchlocationLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="130dp"
            android:background="@drawable/citybackground"
            app:layout_constraintLeft_toLeftOf="parent"
            >


            <TextView
                android:id="@+id/searchcityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cluj-Napoca"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/citySize"
                android:textStyle="bold"
                android:textColor="@color/white"
                ></TextView>

            <TextView
                android:id="@+id/searchcoordonateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="46.72°N 26.62°E"
                app:layout_constraintTop_toBottomOf="@+id/searchcityTextView"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textStyle="normal"
                android:textColor="@color/white"
                ></TextView>

            <ImageView
                android:id="@+id/imgSearch"
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                ></ImageView>


        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>